<Window x:Class="Laboratory_Management_System.frmreset"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory_Management_System"
        mc:Ignorable="d"
        Title="Reset Password" Height="830" Width="1077" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid Margin="0,0,0,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="487*"/>
            <ColumnDefinition Width="105*"/>
            <ColumnDefinition Width="485*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblreset" HorizontalAlignment="Left" Margin="39,249,0,0" VerticalAlignment="Top" Height="50" Width="250" FontSize="24" Content="Reset your password" FontWeight="Bold" Grid.Column="2"/>
        <Image HorizontalAlignment="Left" Width="458" Source="/imglab.jpg" Margin="0,1,0,-2"/>
        <Label x:Name="lbluser" Content="Username" HorizontalAlignment="Left" Margin="13,351,0,0" VerticalAlignment="Top" Width="108" FontSize="20" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Label x:Name="lblmnumber" Content="Mobile Number" HorizontalAlignment="Left" Margin="13,401,0,0" VerticalAlignment="Top" Width="163" FontSize="20" Grid.ColumnSpan="2" Grid.Column="1"/>
        <TextBox x:Name="txtuser" HorizontalAlignment="Left" Margin="121,357,0,0" Width="330" Height="25" CharacterCasing="Lower" TextWrapping="Wrap" VerticalContentAlignment="Center" VerticalAlignment="Top" Grid.Column="2" BorderBrush="Black"/>
        <Button x:Name="btnback1" Content="Back" HorizontalAlignment="Left" Margin="13,567,0,0" VerticalAlignment="Top" Width="167" Height="33" FontSize="20" Grid.ColumnSpan="2" Grid.Column="1"/>
        <Button x:Name="btnnext" Content="Next" HorizontalAlignment="Left" Margin="298,567,0,0" VerticalAlignment="Top" Width="153" Height="33" FontSize="20" Grid.Column="2"/>
        <TextBox x:Name="txtpass" HorizontalAlignment="Left" Margin="121,406,0,0" Width="330" Height="25" CharacterCasing="Lower" TextWrapping="Wrap" VerticalContentAlignment="Center" VerticalAlignment="Top" Grid.Column="2" BorderBrush="Black"/>
    </Grid>
</Window>
