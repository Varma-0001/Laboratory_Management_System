<Window x:Class="Laboratory_Management_System.otpuser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory_Management_System"
        mc:Ignorable="d"
        Title="otpuser" Height="830" Width="1077" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Margin="0,0,0,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="487*"/>
                <ColumnDefinition Width="105*"/>
                <ColumnDefinition Width="485*"/>
            </Grid.ColumnDefinitions>
            <Image HorizontalAlignment="Left" Width="458" Source="/imglab.jpg" Margin="0,1,0,-2"/>
            <TextBox x:Name="txtotp" HorizontalAlignment="Left" Margin="0,408,0,0" Width="330" Height="25" CharacterCasing="Lower" TextWrapping="Wrap" VerticalContentAlignment="Center" VerticalAlignment="Top" Grid.Column="2" BorderBrush="Black"/>
            <Button x:Name="btnback3" Content="Back" HorizontalAlignment="Left" Margin="13,567,0,0" VerticalAlignment="Top" Width="167" Height="33" FontSize="20" Grid.ColumnSpan="2" Grid.Column="1"/>
            <Button x:Name="btnconfirm" Content="Confirm" HorizontalAlignment="Right" Margin="0,567,34,0" VerticalAlignment="Top" Width="153" Height="33" FontSize="20" Grid.Column="2" Click="btnconfirm_Click"/>
            <Label x:Name="lblotp" Grid.Column="2" Content="Enter your OTP" HorizontalAlignment="Left" Margin="75,317,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        </Grid>

    </Grid>
</Window>
