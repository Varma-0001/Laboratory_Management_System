<Window x:Class="Laboratory_Management_System.Admin.AdminPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory_Management_System.Admin"
        mc:Ignorable="d"
        Title="Admin" Height="830" Width="1077" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <!-- Left panel -->
            <ColumnDefinition/>
            <!-- Right panel -->
        </Grid.ColumnDefinitions>

        <!-- Left panel: navigation buttons -->
        <StackPanel Grid.Column="0" Background="#f0f0f0">

            <Button Content="Equipment Details" Name="BtnEquDet" Click="BtnEquDet_Click" Margin="10,10,10,8" Height="32"/>
            <Button Content="Status" Name="BtnStatus" Click="BtnStatus_Click" Margin="10,10,10,8" Height="32"/>
            <Button Content="User Details" Name="BtnUseDet" Click="BtnUseDet_Click" Margin="10,10,10,8" Height="32"/>
            <Button Content="Payement Details" Name="BtnPayDet" Click="BtnPayDet_Click" Margin="10,10,10,8" Height="32"/>
            <Button Content="Report" Name="BtnReport" Click="BtnReport_Click" Margin="10,570,10,8" Height="32"/>
        </StackPanel>

        <!-- Right panel (content host) -->
        <ContentControl x:Name="RightPanel" Grid.Column="1" Background="#fff3e0"/>
    </Grid>
</Window>
