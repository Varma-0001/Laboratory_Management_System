<UserControl x:Class="Laboratory_Management_System.UserControlsSafety.FirstAidKit.FirstAidKit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Laboratory_Management_System.UserControlsSafety.FirstAidKit"
             mc:Ignorable="d" 
             Background="AliceBlue"
             d:DesignHeight="814.04" d:DesignWidth="448.5">

    <Grid>
        <Label Content="First Aid Kit" Height="85" HorizontalAlignment="Center" FontSize="50" FontWeight="Bold" Margin="0,20,0,710"/>
        <Image HorizontalAlignment="Right" Width="166" Margin="0,138,274,512" Source="/UserControlsSafety/Apron.png" Stretch="Fill" />
        <TextBlock x:Name="blkFirstAidKit" FontSize="32" TextWrapping="Wrap" Margin="185,145,14,502" Text="Apron is used  for safety purpose"/>
        <Label Content="Needed Amount" HorizontalAlignment="Left" Margin="14,467,0,0" VerticalAlignment="Top" Height="52" Width="232" FontSize="30"/>
        <TextBox x:Name="txtFirstAidKitamount" HorizontalAlignment="Left" Margin="12,524,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="396" Height="30" FontSize="20" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
        <Label Content="Total Amount" HorizontalAlignment="Left" Margin="18,604,0,0" VerticalAlignment="Top" Height="52" Width="232" FontSize="30"/>
        <TextBox x:Name="txtFirstAidKittotal" HorizontalAlignment="Left" Margin="12,658,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="396" Height="30" FontSize="20" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" IsReadOnly="True"/>
        <Button Content="Finish" HorizontalAlignment="Left" Margin="220,743,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="33" Width="120" FontSize="20"/>
        <Button x:Name="btnFirstAidKitTotal" Click="btnFirstAidKitTotal_Click" Content="Total" HorizontalAlignment="Left" Margin="15,746,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Height="30" Width="120" FontSize="20"/>
        <Label Content="Available Amount" HorizontalAlignment="Left" Margin="14,341,0,0" VerticalAlignment="Top" Height="52" Width="248" FontSize="30"/>
        <TextBox x:Name="txtFirstAidKitcount" HorizontalAlignment="Left" Margin="12,394,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="396" Height="30" FontSize="20" BorderBrush="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
    </Grid>
</UserControl>
