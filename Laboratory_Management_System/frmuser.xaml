<Window x:Class="Laboratory_Management_System.frmuser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory_Management_System"
        mc:Ignorable="d"
        Title="frmuser" Height="830" Width="1077" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Grid Margin="0,0,0,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="487*"/>
                <ColumnDefinition Width="105*"/>
                <ColumnDefinition Width="485*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="lbluserinterface" HorizontalAlignment="Left" Margin="93,195,0,0" VerticalAlignment="Top" Height="50" Width="161" FontSize="24" Content="Account Info" FontWeight="Bold" Grid.Column="2"/>
            <Image HorizontalAlignment="Left" Width="458" Source="/imglab.jpg" Margin="0,1,0,-2"/>
            <Label x:Name="lbluser_name" Content="Username" HorizontalAlignment="Left" Margin="17,371,0,0" VerticalAlignment="Top" Width="108" FontSize="20" Grid.ColumnSpan="2" Grid.Column="1"/>
            <Label x:Name="lblemail" Content="Email Address" HorizontalAlignment="Left" Margin="17,322,0,0" VerticalAlignment="Top" Width="163" FontSize="20" Grid.ColumnSpan="2" Grid.Column="1"/>
            <TextBox x:Name="txtmail" HorizontalAlignment="Center" Margin="0,328,0,0" Width="330" Height="25" CharacterCasing="Lower" TextWrapping="Wrap" VerticalContentAlignment="Center" VerticalAlignment="Top" Grid.Column="2" BorderBrush="Black"/>
            <Button x:Name="btnback3" Content="Back" HorizontalAlignment="Left" Margin="17,559,0,0" VerticalAlignment="Top" Width="167" Height="33" FontSize="20" Grid.ColumnSpan="2" Grid.Column="1"/>
            <Button x:Name="btncreate" Content="Create" HorizontalAlignment="Left" Margin="254,559,0,0" VerticalAlignment="Top" Width="154" Height="33" FontSize="20" Grid.Column="2" Click="btncreate_Click"/>
            <TextBox x:Name="txtuser_name" HorizontalAlignment="Center" Margin="0,377,0,0" Width="330" Height="25" CharacterCasing="Lower" TextWrapping="Wrap" VerticalContentAlignment="Center" VerticalAlignment="Top" Grid.Column="2" BorderBrush="Black"/>
            <Label x:Name="lblpass" Content="Password" HorizontalAlignment="Left" Margin="17,418,0,0" VerticalAlignment="Top" Width="108" FontSize="20" Grid.ColumnSpan="2" Grid.Column="1"/>
            <TextBox x:Name="txt_pass" HorizontalAlignment="Center" Margin="0,424,0,0" Width="330" Height="25" CharacterCasing="Lower" TextWrapping="Wrap" VerticalContentAlignment="Center" VerticalAlignment="Top" Grid.Column="2" BorderBrush="Black"/>
        </Grid>

    </Grid>
</Window>
